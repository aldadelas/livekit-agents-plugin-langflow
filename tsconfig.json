{
    "include": ["./src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "node16",
        "declaration": true,
        "declarationMap": true,
        "allowJs": false,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "composite": true,
        "declarationDir": "./dist",
        "outDir": "./dist"
    }
  }
  